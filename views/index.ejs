<body>
  <nav class="header">
    <section class="logo">
      <div class="logo-picture">
        <a href="/">
          <h1> ULX</h1>
        </a>
      </div>
    </section>
    <section class="search">
      <form action="" method="get">
        <input type="text" id="search" name="search" placeholder="Temukan mobil, HP, dan lainnya..">
        <button type="submit"><i class="fas fa-search"></i></button>
      </form>
    </section>
    <section class="todo">
      <%if (userIn){%>
        <a href="/logout" class="logout">Logout</a>
        <div class="profile">
          <a href="/profile" class="profile">
            <%if (dataUser.avatar){%>
              <img src="/images/<%=dataUser.avatar%>" alt="your profile picture">
              <%} else {%>
                <i class="fa fa-user"></i>
                <%}%>
          </a>
        </div>
        <a href="/sell" class="sell">Sell</a>
        <%} else{%>
          <a href="/login" class="login">Login</a>
          <a href="/register" class="register">Register</a>
          <a href="/sell" class="sell">Sell</a>
          <%}%>
    </section>
  </nav>
  <section class="header">

  </section>
  <main class="body">
    <section class="category">
      <select name="" class="category">
        <option value="">All Categories</option>
        <%for (let index=0; index < dataCategories.length; index++) {%>
          <%let item=dataCategories[index]%>
            <option value="item.name">
              <%=item.name%>
            </option>
            <%}%>
      </select>
    </section>
    <section class="slideshow">
      <h2>Selengkapnya tentang ....</h2>
      <div class="slideshow-container">
        <%for (let i=0; i < data.length/3; i++) {%>
          <%let item=data[i]%>
            <div class="mySlides fade">
              <div class="numbertext">
                <%=i+1%> / <%=Math.ceil(data.length /4)+1%>
              </div>
              <a href="/goods/<%=item.id%>">
                <img src="/images/<%=item.pictures%>">
              </a>
              <div class="text">
                <%=item.title%>
              </div>
            </div>
            <%}%>

              <a class="prev" onclick="plusSlides(-1)">&#10094;</a>
              <a class="next" onclick="plusSlides(1)">&#10095;</a>

      </div>
      <br>
      <div style="text-align:center">
        <%for (let i=0; i < data.length/3; i++) {%>
          <span class="dot" onclick="currentSlide(1)"></span>
          <%}%>
      </div>
    </section>
    <section class="recommendation">
      <p>
      <h2> Rekomendasi Baru </h2>
      </p>
      <section class="goods">
        <%for (let i=0; i < data.length; i++) {%>
          <%let item=data[i]%>
            <a href="/goods/<%=item.id%>">
              <div class="goods-container">
                <div class="picture">
                  <img src="/images/<%=item.pictures ? item.pictures : 'nothing.png'%>" alt="goods-picture"
                    class="mini">
                </div>
                <h3 class="title">
                  <%=item.title%>
                </h3>
                <h3 class="price">
                  <%=currencyFormatter.format(item.price,currencyFormat)%>
                </h3>
              </div>
            </a>
            <%}%>
      </section>
    </section>
  </main>
  <section class="footer">
  </section>
</body>

